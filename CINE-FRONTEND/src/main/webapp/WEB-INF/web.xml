<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>MoviesListService</servlet-name>
        <servlet-class>services.MoviesListService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomService</servlet-name>
        <servlet-class>services.RoomService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuildRoomService</servlet-name>
        <servlet-class>services.BuildRoomService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginService</servlet-name>
        <servlet-class>services.LoginService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleMovieService</servlet-name>
        <servlet-class>services.ScheduleMovieService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieService</servlet-name>
        <servlet-class>services.MovieService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeBillboardMovieStatus</servlet-name>
        <servlet-class>services.ChangeBillboardMovieStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketsSoldService</servlet-name>
        <servlet-class>services.TicketsSoldService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MoviesListService</servlet-name>
        <url-pattern>/MoviesListService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RoomService</servlet-name>
        <url-pattern>/RoomService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuildRoomService</servlet-name>
        <url-pattern>/BuildRoomService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginService</servlet-name>
        <url-pattern>/LoginService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleMovieService</servlet-name>
        <url-pattern>/ScheduleMovieService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieService</servlet-name>
        <url-pattern>/MovieService</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeBillboardMovieStatus</servlet-name>
        <url-pattern>/ChangeBillboardMovieStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketsSoldService</servlet-name>
        <url-pattern>/TicketsSoldService</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
